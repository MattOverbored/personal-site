---
layout: base.njk
navPage: blog
---

  <!-- Post Hero -->
  <section class="blog-post-hero">
    <div class="container container--blog">
      <p class="hero-eyebrow"><a href="/blog/" class="blog-breadcrumb">Blog</a></p>
      <h1 class="blog-post-hero__title">{{ title }}</h1>
      <div class="blog-post-hero__meta">
        <time class="blog-post-card__date" datetime="{{ date | isoDate }}">{{ date | readableDate }}</time>
        {% if tags and tags.length > 0 %}
          <div class="blog-post-card__tags">
            {% for tag in tags %}
              <a href="/blog/tag/{{ tag | lower | replace(' ', '-') }}/" class="blog-tag-pill">{{ tag }}</a>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  </section>

  <!-- Post Content -->
  <article class="section">
    <div class="container container--blog">
      <div class="blog-post-content">
        {{ content | safe }}
      </div>
      <div class="blog-post-footer">
        <a href="/blog/" class="blog-back-link">&larr; Back to all posts</a>
      </div>
    </div>
  </article>
