---
layout: base.njk
title: Blog | Matt Hovis
navPage: blog
permalink: /blog/
---

  <!-- Blog Hero -->
  <section class="blog-page-hero">
    <div class="container">
      <p class="hero-eyebrow">Writing</p>
      <h1 class="blog-page-hero__title">Blog</h1>
      <p class="blog-page-hero__subtitle">Thoughts on games, tech, baseball, and whatever else is on my mind.</p>
    </div>
  </section>

  <!-- Tag Filter -->
  {% if collections.tagList.length > 0 %}
  <section class="blog-tags-bar section--alt">
    <div class="container">
      <div class="blog-tags-filter">
        <span class="blog-tags-filter__label">Browse by tag:</span>
        <div class="blog-tags-filter__tags">
          {% for tag in collections.tagList %}
            <a href="/blog/tag/{{ tag | lower | replace(' ', '-') }}/" class="blog-tag-link">{{ tag }}</a>
          {% endfor %}
        </div>
      </div>
    </div>
  </section>
  {% endif %}

  <!-- Post List -->
  <section class="section">
    <div class="container container--blog">

      {% set posts = collections.blog %}

      {% if not posts or posts.length == 0 %}
        <div class="blog-empty">
          <p class="blog-empty__icon">&#128221;</p>
          <h2 class="blog-empty__title">No posts yet</h2>
          <p class="blog-empty__text">Check back soon â€” posts are coming.</p>
        </div>
      {% else %}
        <div class="blog-post-list">
          {% for post in posts %}
            <article class="blog-post-card">
              <div class="blog-post-card__meta">
                <time class="blog-post-card__date" datetime="{{ post.date | isoDate }}">{{ post.date | readableDate }}</time>
                {% if post.data.tags and post.data.tags.length > 0 %}
                  <div class="blog-post-card__tags">
                    {% for tag in post.data.tags %}
                      <a href="/blog/tag/{{ tag | lower | replace(' ', '-') }}/" class="blog-tag-pill">{{ tag }}</a>
                    {% endfor %}
                  </div>
                {% endif %}
              </div>
              <h2 class="blog-post-card__title">
                <a href="{{ post.url }}">{{ post.data.title }}</a>
              </h2>
              {% if post.data.description %}
                <p class="blog-post-card__excerpt">{{ post.data.description }}</p>
              {% endif %}
              <a href="{{ post.url }}" class="blog-post-card__read-more">Read post &rarr;</a>
            </article>
          {% endfor %}
        </div>
      {% endif %}

    </div>
  </section>
