---
layout: base.njk
navPage: blog
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - blog
    - tagList
permalink: /blog/tag/{{ tag | lower | replace(' ', '-') }}/
---

  <!-- Tag Hero -->
  <section class="blog-page-hero">
    <div class="container">
      <p class="hero-eyebrow"><a href="/blog/" class="blog-breadcrumb">Blog</a> &rsaquo; Tag</p>
      <h1 class="blog-page-hero__title">{{ tag }}</h1>
      <p class="blog-page-hero__subtitle">All posts tagged &ldquo;{{ tag }}&rdquo;</p>
    </div>
  </section>

  <!-- All Tags -->
  {% if collections.tagList.length > 0 %}
  <section class="blog-tags-bar section--alt">
    <div class="container">
      <div class="blog-tags-filter">
        <span class="blog-tags-filter__label">All tags:</span>
        <div class="blog-tags-filter__tags">
          {% for t in collections.tagList %}
            <a href="/blog/tag/{{ t | lower | replace(' ', '-') }}/" class="blog-tag-link {% if t == tag %}blog-tag-link--active{% endif %}">{{ t }}</a>
          {% endfor %}
        </div>
      </div>
    </div>
  </section>
  {% endif %}

  <!-- Post List -->
  <section class="section">
    <div class="container container--blog">
      {% set taggedPosts = collections[tag] %}
      {% if not taggedPosts or taggedPosts.length == 0 %}
        <div class="blog-empty">
          <p class="blog-empty__icon">&#128221;</p>
          <h2 class="blog-empty__title">No posts with this tag yet</h2>
          <p class="blog-empty__text"><a href="/blog/">Back to all posts</a></p>
        </div>
      {% else %}
        <div class="blog-post-list">
          {% for post in taggedPosts | reverse %}
            <article class="blog-post-card">
              <div class="blog-post-card__meta">
                <time class="blog-post-card__date" datetime="{{ post.date | isoDate }}">{{ post.date | readableDate }}</time>
                {% if post.data.tags and post.data.tags.length > 0 %}
                  <div class="blog-post-card__tags">
                    {% for t in post.data.tags %}
                      <a href="/blog/tag/{{ t | lower | replace(' ', '-') }}/" class="blog-tag-pill {% if t == tag %}blog-tag-pill--active{% endif %}">{{ t }}</a>
                    {% endfor %}
                  </div>
                {% endif %}
              </div>
              <h2 class="blog-post-card__title">
                <a href="{{ post.url }}">{{ post.data.title }}</a>
              </h2>
              {% if post.data.description %}
                <p class="blog-post-card__excerpt">{{ post.data.description }}</p>
              {% endif %}
              <a href="{{ post.url }}" class="blog-post-card__read-more">Read post &rarr;</a>
            </article>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </section>
